<!-- sections/gift-guide.liquid -->

<section class="gift-guide-section">
  <div class="gift-guide-wrapper">
    <div class="gift-guide-text">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subheading }}</p>
      <a href="{{ section.settings.buttonLink }}" class="gift-guide-btn">
        {{ section.settings.buttonLabel }}
      </a>
    </div>
    {% if section.settings.backgroundImage != blank %}
      <div class="gift-guide-bg">
        <img 
          src="{{ section.settings.background_image | image_url: width: 1600 }}" 
          alt="Gift Guide Background"
          width="{{ section.settings.background_image.width | default: 1600 }}"
          height="{{ section.settings.background_image.height | default: 900 }}"
        >
      </div>
    {% endif %}
  </div>
</section>

<style>
.gift-guide-section {
  position: relative;
  padding: 60px 20px;
  background-color: #fff;
  overflow: hidden;
}

.gift-guide-wrapper {
  max-width: 1200px;
  margin: 0 auto;
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.gift-guide-text {
  max-width: 600px;
  background: #fff;
  padding: 40px;
  z-index: 3;
}

.gift-guide-text h2 {
  font-size: 36px;
  font-weight: bold;
  margin-bottom: 20px;
}

.gift-guide-text p {
  font-size: 16px;
  margin-bottom: 30px;
}

.gift-guide-btn {
  display: inline-block;
  padding: 12px 24px;
  background-color: #000;
  color: #fff;
  text-decoration: none;
  font-weight: 600;
}

.gift-guide-bg {
  position: absolute;
  top: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  opacity: 0.15;
  pointer-events: none;
}

.gift-guide-bg img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
</style>

{% schema %}
{
  "name": "t:sections.gift-guide.name",
  "tag": "section",
  "class": "gift-guide",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "buttonLink",
      "label": "Button Link",
      "default": "/collections/gifts"
    },
    {
      "type": "text",
      "id": "buttonLabel",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "image_picker",
      "id": "backgroundImage",
      "label": "Background Image"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide",
      "category": "Promotional"
    }
  ]
}
{% endschema %}
