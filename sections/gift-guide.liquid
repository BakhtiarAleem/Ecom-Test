<!-- sections/gift-guide.liquid -->

<section class="gift-guide-section">
  <div class="top-bar">
    <div class="logo">
      <img
        src="{{ section.settings.logo | image_url: width: 890 }}"
        alt="Gift Guide Background"
        width="{{ section.settings.logo.width | default: 890 }}"
        height="{{ section.settings.logo.height | default: 420 }}"
      >
    </div>

    {% comment %} calling Announcement Bar Data {% endcomment %}
    {%- if section.settings.announcement_label != '' -%}
      <div class="header-announcement">
        {{ section.settings.announcement_label }}
      </div>
    {% endif %}

    <div class="choose-gift">
      <a href="{{ section.settings.choose_gift_link }}" class="choose-gift-btn btn-color-fill" data-color="#000">
        <span class="overlay"></span>
        <span class="btn-content">
          {{ section.settings.choose_gift_label }}
          <div class="btn-icon">
            <img src="{{ 'arrow-black.png' | asset_url }}" alt="arrow-white" width="100%" height="auto">
          </div>
        </span>
      </a>
    </div>
  </div>

  <div class="gift-guide-wrapper">
    {% if section.settings.image_top != blank %}
      <div class="gift-guide-top-image animate-from-top">
        <img
          src="{{ section.settings.image_top | image_url: width: 1600 }}"
          alt="Gift Guide Background"
          width="{{ section.settings.image_top.width | default: 1600 }}"
          height="{{ section.settings.image_top.height | default: 390 }}"
        >
      </div>
    {% endif %}
    <div class="gift-guide-bottom">
      <div class="gift-guide-text animate-fade-in">
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.subheading }}</p>
        <a href="{{ section.settings.buttonLink }}" class="gift-guide-btn btn-color-fill" data-color="#FFF544">
          <span class="overlay"></span>
          <span class="btn-content">
            {{ section.settings.buttonLabel }}
            <div class="btn-icon">
              <img src="{{ 'arrow-white.png' | asset_url }}" alt="arrow-white" width="100%" height="auto">
            </div>
          </span>
        </a>
      </div>
      {% if section.settings.image_bottom != blank %}
        <div class="gift-guide-bg animate-from-right">
          <img
            src="{{ section.settings.image_bottom | image_url: width: 890 }}"
            alt="Gift Guide Background"
            width="{{ section.settings.image_bottom.width | default: 890 }}"
            height="{{ section.settings.image_bottom.height | default: 420 }}"
          >
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .gift-guide-section {
    position: relative;
    padding: 0px 20px;
    background-color: #fff;
    overflow: hidden;
  }
  .top-bar{
    display: flex;
      background-color: #F5F5F5;
    width: 100%;
    align-content: center;
    justify-content: space-between;
  }
  .gift-guide-wrapper {
    margin: 0 auto;
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .gift-guide-text {
    max-width: 600px;
    background: #fff;
    padding: 40px;
    z-index: 3;
  }

  .gift-guide-text h2 {
    font-size: 70px;
    font-weight: bold;
    margin-bottom: 20px;
  }

  .gift-guide-text p {
    font-size: 20px;
    margin-bottom: 30px;
  }

  .gift-guide-btn {
    display: inline-block;
    padding: 12px 24px;
    background-color: #000;
    color: #fff;
    font-size: 16px;
    text-decoration: none;
    font-weight: 600;
  }

  .gift-guide-btn .btn-icon {
    display: inline-block;
    align-items: center;
    justify-content: center;
    vertical-align: top;
    margin-left: 29px;
    width: 25px;
  }

  .gift-guide-bottom {
    display: flex;
    width: 100%;
    height: auto;
  }

  .gift-guide-bg {
    position: relative;
    top: 0;
    right: 0;
    z-index: 1;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .gift-guide-bg img {
    width: 100%;
    height: 100%;
    min-height: 402px;
  }
  .gift-guide-top-image {
    width: 100%;
  }
  .gift-guide-top-image img {
    width: 100%;
    height: auto;
  }
</style>

{% schema %}
{
  "name": "t:sections.gift-guide.name",
  "tag": "section",
  "class": "gift-guide",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "text",
      "id": "choose_gift_link",
      "label": "Choose gift Link",
      "default": "/collections/gifts"
    },
    {
      "type": "text",
      "id": "choose_gift_label",
      "label": "Choose Gift Label",
      "default": "choose gift"
    },
    {
      "type": "text",
      "id": "announcement_label",
      "label": "Announcement Label",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "buttonLink",
      "label": "Button Link",
      "default": "/collections/gifts"
    },
    {
      "type": "text",
      "id": "buttonLabel",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "image_picker",
      "id": "image_top",
      "label": "Image Top"
    },
    {
      "type": "image_picker",
      "id": "image_bottom",
      "label": "Image Bottom"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide",
      "category": "Promotional"
    }
  ]
}
{% endschema %}
